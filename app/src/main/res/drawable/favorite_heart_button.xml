<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/unchecked"
        android:state_checked="false"
        android:drawable="@drawable/favorite_heart_unchecked" />

    <item
        android:id="@+id/checked"
        android:state_checked="true"
        android:drawable="@drawable/favorite_heart_checked" />

    <transition
        android:fromId="@id/unchecked"
        android:toId="@id/checked"
        android:drawable="@drawable/checkbox_anim_unchecked_to_checked">
        </transition>

    <transition
        android:fromId="@id/checked"
        android:toId="@id/unchecked"
        android:drawable="@drawable/checkbox_anim_checked_to_unchecked">
        </transition>
</animated-selector>