        <item name="colorPrimary">@color/transparent</item>
        <item name="bottomAppBarStyle">@style/BottomAppBarAndrei</item>
        <item name="buttonStyle">@style/DefaultButtonAndrei</item>
        <item name="android:windowTranslucentStatus">false</item>
